CREATE VIEW [dbo].v_MaterialLot_Request
AS
SELECT MaterialLot.ID,
       MaterialLot.Quantity,
       SegmentResponse.ProductionRequest
  FROM dbo.MaterialLot MaterialLot,
       dbo.MaterialActual MaterialActual,
       dbo.SegmentResponse SegmentResponse
 WHERE (MaterialActual.SegmentResponseID = SegmentResponse.ID)
   AND (MaterialLot.ID = MaterialActual.MaterialLotID)
GO